<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="com.chucherias.entidades.Producto" table="producto">
    <id name="id" type="int" unsaved-value="null">
      <generator class="native"/>
    </id>
    <property column="codigo" name="codigo" type="string"/>
    <property column="nombre" name="nombre" type="string"/>
    <property column="descripcion" name="descripcion" type="string"/>
    <property column="precio" name="precio" type="double"/>
    <property column="estado" name="estado" type="string"/>
    <property column="tipo" name="tipo" type="string"/>
  </class>
</hibernate-mapping>
